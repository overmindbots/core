{
  "name": "@overmindbots/core",
  "private": true,
  "engines": {
    "node": ">=9.11.2"
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "bootstrap": "lerna bootstrap",
    "build-bot-manager": "lerna run build --scope=@overmindbots/service-bot-manager",
    "start-bot-manager": "lerna run start --scope=@overmindbots/service-bot-manager"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/prompt": "^7.0.0",
    "commitizen": "^2.10.1",
    "cz-lerna-changelog": "^1.2.1",
    "git-branch-is": "^2.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lerna-changelog": "^0.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/overmindbots/core.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@overmindbots/shared-utils",
      "**/@overmindbots/shared-models",
      "**/@overmindbots/discord.js-command-manager",
      "**/@overmindbots/bot-referral-ranks",
      "**/@overmindbots/shared-utils/**",
      "**/@overmindbots/shared-models/**",
      "**/@overmindbots/discord.js-command-manager/**",
      "**/@overmindbots/bot-referral-ranks/**"
    ]
  },
  "publishConfig": {
    "access": "restricted"
  }
}
