{
  "name": "@overmindbots/core",
  "private": true,
  "engines": {
    "node": ">=9.11.2"
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "release-production": "lerna publish",
    "release-staging": "lerna publish --canary",
    "bootstrap": "lerna bootstrap",
    "start-bot-referral-ranks": "lerna run start --scope={@overmindbots/bot-referral-ranks,@overmindbots/service-bot-manager} --parallel",
    "semantic-release": "semantic-release",
    "start-bot-manager": "babel-node ./packages/service-bot-manager/src/index.ts --extensions '.ts'",
    "build-bot-manager": "lerna run build --scope=@overmindbots/service-bot-manager",
    "build": "babel-node ./packages/service-bot-manager/src/index.ts --out-dir build --extensions '.ts'"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/prompt": "^7.0.0",
    "commitizen": "^2.10.1",
    "cz-lerna-changelog": "^1.2.1",
    "git-branch-is": "^2.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lerna-changelog": "^0.8.0",
    "semantic-release": "^15.7.1",
    "semantic-release-cli": "^4.0.6"
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/overmindbots/core.git"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/shared-utils", "**/shared-models"]
  },
  "publishConfig": {
    "access": "restricted"
  }
}
