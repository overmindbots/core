{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": 9
        }
      }
    ],
    "@babel/typescript"
  ],

  "plugins": [
    "@babel/transform-runtime",
    [
      "module-resolver",
      {
        "extensions": [".js", ".ts"],
        "root": ["./src"],
        "alias": {
          "~": "./src"
        }
      }
    ]
  ]
}
