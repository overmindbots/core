{
  "presets": [
    [
      "@babel/env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/typescript"
  ],

  "plugins": [
    "@babel/plugin-transform-runtime",
    "@babel/plugin-proposal-class-properties",
    [
      "module-resolver",
      {
        "extensions": [".js", ".ts"],
        "root": ["./src"],
        "alias": {
          "~": "./src"
        }
      }
    ]
  ]
}
