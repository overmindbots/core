{
  "name": "service-referral-ranks-invites",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "npm run start-develop",
    "start-develop": "nodemon -e ts --watch src --exec \"babel-node ./src/startup --extensions '.ts'\"",
    "start-production": "node ./build/index.js --max-old-space-size=3072",
    "build": "npm run clean:build && babel src --out-dir build --extensions '.ts'",
    "clean:build": "rm -rf ./build",
    "lint": "tslint --project tsconfig.json"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.53",
    "@types/express": "^4.16.0",
    "bluebird": "^3.5.1",
    "discord.js": "^11.3.2",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.1",
    "node-fetch": "^2.1.2",
    "uuid": "^3.3.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.53",
    "@babel/core": "^7.0.0-beta.53",
    "@babel/node": "^7.0.0-beta.53",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.53",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.53",
    "@babel/preset-env": "^7.0.0-beta.53",
    "@babel/preset-typescript": "^7.0.0-beta.53",
    "@types/bluebird": "^3.5.21",
    "@types/dotenv": "^4.0.3",
    "@types/lodash": "^4.14.110",
    "@types/mongoose": "^5.0.18",
    "@types/node-fetch": "^2.1.1",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "babel-plugin-module-resolver": "^3.1.1",
    "ts-loader": "^4.4.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
