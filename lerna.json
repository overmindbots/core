{
  "lerna": "2.11.0",
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "repo": "overmindbots/core",
    "labels": {
      "tag: new feature": ":rocket: New Feature",
      "tag: bug fix": ":bug: Bug Fix",
      "tag: enhancement": ":nail_care: Enhancement"
    }
  },
  "commands": {
    "publish": {
      "allowBranch": ["master", "development"],
      "cdVersion": "prerelease",
      "conventionalCommits": true,
      "gitRemote": "origin",
      "preid": "beta",
      "message": "chore(release): publish %s"
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
