{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["master", "development", "implement-releases"],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "preid": "beta",
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn"
}
